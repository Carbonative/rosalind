.box.box-widget
  .box-header
    h4.username.enable-select #{firstName} #{lastName}
      if privatePatient
        small {{_ 'inboundCalls.private'}}
      else
        small {{_ 'inboundCalls.insurance'}}
    h3.description.enable-select {{zerofix telephone}}
    
  .box-body
    blockquote
      p.enable-select.pre-wrap #{note}

    .text-muted
      span.pull-left
        | {{_ 'inboundCalls.answeredBy'}} {{getFirstName createdBy}} {{livestamp createdAt}} {{_ 'ui.at'}} {{time createdAt}}
      if hasComments
        span.pull-right
          | {{ humanCommentCount }}

  +comments

  .box-footer
    a.resolve {{_ 'inboundCalls.resolve'}}
