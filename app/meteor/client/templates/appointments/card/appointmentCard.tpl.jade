.box.box-widget.appointment
  .box-header
    if open
      button.box-hover.pull-right.btn.btn-success.admit {{_ 'appointments.admit'}}
    if admitted
      button.box-hover.pull-right.btn.btn-success.treat {{_ 'appointments.treat'}}
    if treated
      button.box-hover.pull-right.btn.btn-success.resolve {{_ 'appointments.resolve'}}


    h4.username.enable-select
      <b>{{ time start }}</b> {{ getFullNameWithTitle patient }}

      if patientIdButNoPatient
        i.fa.fa-warning.text-warning

      <br />

      small {{ getFullNameWithTitle assignee }}

      if privateAppointment
        small {{_ 'appointments.private'}}

  .box-body
    blockquote
      p.enable-select.pre-wrap #{notes}

    | {{> humanCommentCount }}
    | {{> stamps fields='treated,admitted,created' doc=this}}

  +comments
