aside.main-sidebar
  section.sidebar
    ul.sidebar-menu
      li.header Actions
      +each sidebar
        li.treeview
          a.pointer
            <i class='fa fa-{{icon}}'></i>
            span.level-0 #{name}
            i.fa.fa-angle-left.pull-right
          ul.treeview-menu
            +each submenu
                li
                  a.active(href=link)
                    span.level-1 #{name}
