{
  "servers": [
    {
      "host": "$PRODUCTION_MUP_HOST",
      "username": "$PRODUCTION_MUP_USERNAME"
    }
  ],
  "setupMongo": true,
  "appName": "rosalind",
  "app": "$PRODUCTION_MUP_APP_PATH",

  "env": {
    "PORT": 80,
    "ROOT_URL": "$PRODUCTION_MUP_ROOT_URL",
    "METEOR_ENV": "production",
    "KADIRA_APP_ID": "$PRODUCTION_MUP_KADIRA_APP_ID",
    "KADIRA_APP_SECRET": "$PRODUCTION_MUP_KADIRA_APP_SECRET",
    "HTTP_FORWARDED_COUNT": 1
  },

  "deployCheckWaitTime": 15,
  "enableUploadProgressBar": true
}
