{
  "servers": [
    {
      "host": "$PRODUCTION_MUP_HOST",
      "username": "$PRODUCTION_MUP_USERNAME",
      "pem": "$PRODUCTION_MUP_PUBLIC_KEY_PATH"
    }
  ],

  "setupMongo": true,
  "setupNode": true,
  "nodeVersion": "0.12.7",

  "appName": "rosalind",
  "app": "../../app/meteor/",

  "env": {
    "PORT": 80,
    "ROOT_URL": "$PRODUCTION_MUP_ROOT_URL",
    "METEOR_ENV": "production",
    "KADIRA_APP_ID": "$PRODUCTION_MUP_KADIRA_APP_ID",
    "KADIRA_APP_SECRET": "$PRODUCTION_MUP_KADIRA_APP_SECRET",
    "SENTRY_KEY": "$PRODUCTION_MUP_SENTRY_KEY",
    "LOGGLY_SUBDOMAIN": "$PRODUCTION_MUP_LOGGLY_SUBDOMAIN",
    "LOGGLY_KEY": "$PRODUCTION_MUP_LOGGLY_KEY",
    "ELASTICSEARCH_URL": "elasticsearch:9200",
    "HTTP_FORWARDED_COUNT": 1
  },

  "deployCheckWaitTime": 180,
  "enableUploadProgressBar": true
}
