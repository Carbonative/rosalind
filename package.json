{
  "name": "rosalind-development",
  "private": true,
  "scripts": {
    "start": "docker-compose -f docker-compose.yml -f docker-compose.development.yml up",
    "start:server": "docker-compose -f docker-compose.yml -f docker-compose.development.yml up meteor",
    "start:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "start:backing": "docker-compose -f docker-compose.yml -f docker-compose.development.yml up mongodb elasticsearch transporter kibana",
    "shell": "docker exec -it rosalind_meteor_1 meteor shell",
    "docker-compose": "docker-compose -f docker-compose.yml -f docker-compose.development.yml",
    "server": "docker-compose -f docker-compose.yml -f docker-compose.development.yml run meteor",
    "server:npm": "docker-compose -f docker-compose.yml -f docker-compose.development.yml run --no-deps meteor meteor npm",
    "server:npm:shrink": "npm run server:npm:shrinkwrap && npm run server:npm:shrinkpack",
    "server:npm:shrinkwrap": "docker-compose -f docker-compose.yml -f docker-compose.development.yml run --no-deps meteor meteor npm shrinkwrap --dev",
    "server:npm:shrinkpack": "docker-compose -f docker-compose.yml -f docker-compose.development.yml run --no-deps meteor ./node_modules/.bin/shrinkpack",
    "test": "cd ./app/meteor && npm run test",
    "test:acceptance": "./node_modules/coffee-script/bin/coffee ./test.coffee",
    "lint": "./node_modules/coffeelint/bin/coffeelint --quiet . && ./node_modules/.bin/standard",
    "storybook": "docker-compose -f docker-compose.yml -f docker-compose.development.yml run --service-ports storybook",
    "client:start": "cd app/electron/ && node_modules/.bin/grunt",
    "client:build": "cd app/electron/ && node_modules/.bin/grunt build",
    "client:tag": "cd app/electron/ && node_modules/.bin/grunt tag"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "chai-datetime": "^1.4.1",
    "chimp": "^0.40.4",
    "coffee-script": "^1.10.0",
    "coffeelint": "^1.15.7",
    "lodash": "^4.15.0",
    "mocha": "^3.0.2",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "standard": "^8.0.0"
  },
  "engines": {
    "node": "^0.12.7"
  },
  "standard": {
    "ignore": [
      "/app/meteor/client/compatibility/",
      "/app/meteor/packages/"
    ]
  }
}
